{
  "compilerOptions": {
    /* Emit */
    "target": "esnext",
    "module": "esnext",
    /* Build */
    "outDir": "dist",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    // Ensure use `lf` like EOL on builded files
    "newLine": "lf",
    /* Module */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    /* Recommended */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Linting */
    "strict": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Lib */
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "baseUrl": ".",
  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
